# =============================================================================
# CryptoPulse Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
CRYPTOPULSE_ENV=development
CRYPTOPULSE_DEBUG=true
CRYPTOPULSE_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Azure Configuration
# -----------------------------------------------------------------------------
# Event Hubs
AZURE_EVENTHUB_NAMESPACE=<your-namespace>.servicebus.windows.net
AZURE_EVENTHUB_TRADES_NAME=trades
AZURE_EVENTHUB_NEWS_NAME=news
AZURE_EVENTHUB_FEATURES_NAME=features
AZURE_EVENTHUB_PREDICTIONS_NAME=predictions
AZURE_EVENTHUB_CONNECTION_STRING=

# Storage (ADLS Gen2)
AZURE_STORAGE_ACCOUNT_NAME=<your-storage-account>
AZURE_STORAGE_CONTAINER_NAME=cryptopulse-delta
AZURE_STORAGE_CONNECTION_STRING=

# Databricks
AZURE_DATABRICKS_HOST=https://<region>.azuredatabricks.net
AZURE_DATABRICKS_TOKEN=

# Key Vault
AZURE_KEYVAULT_NAME=<your-keyvault>

# Groq (for LangGraph multi-agent system â€” https://console.groq.com/keys)
GROQ_API_KEY=

# -----------------------------------------------------------------------------
# Local Development (Docker Compose)
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TRADES_TOPIC=trades
KAFKA_NEWS_TOPIC=news
KAFKA_FEATURES_TOPIC=features
KAFKA_PREDICTIONS_TOPIC=predictions

SPARK_MASTER_URL=spark://localhost:7077
DELTA_LAKE_PATH=/data/delta

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Binance Configuration
# -----------------------------------------------------------------------------
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_WEBSOCKET_URL=wss://stream.binance.com:9443/ws
BINANCE_REST_URL=https://api.binance.com

# Trading pairs to track (comma-separated)
BINANCE_TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,AVAXUSDT,DOTUSDT,MATICUSDT,LINKUSDT,UNIUSDT,ATOMUSDT,LTCUSDT,ETCUSDT,XLMUSDT,NEARUSDT,APTUSDT,FILUSDT,ARBUSDT

# Rate limiting
BINANCE_RATE_LIMIT_PER_MINUTE=1200

# -----------------------------------------------------------------------------
# News API Configuration
# -----------------------------------------------------------------------------
# CoinDesk
COINDESK_API_URL=https://www.coindesk.com/pf/api/v3/content/fetch/articles

# CryptoCompare
CRYPTOCOMPARE_API_KEY=
CRYPTOCOMPARE_API_URL=https://min-api.cryptocompare.com/data/v2/news/

# CryptoPanic (optional)
CRYPTOPANIC_API_KEY=
CRYPTOPANIC_API_URL=https://cryptopanic.com/api/v1/posts/

# News crawl interval (seconds)
NEWS_CRAWL_INTERVAL=60

# -----------------------------------------------------------------------------
# ML Configuration
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=cryptopulse

# Model paths
MODEL_PRICE_DIRECTION_PATH=models/artifacts/price_direction
MODEL_ANOMALY_DETECTION_PATH=models/artifacts/anomaly_detection

# Prediction settings
PREDICTION_HORIZON_MINUTES=5
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Authentication (optional)
API_KEY_HEADER=X-API-Key
API_KEYS=

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# Alerting
# -----------------------------------------------------------------------------
ALERT_WEBHOOK_URL=
ALERT_EMAIL_RECIPIENTS=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
